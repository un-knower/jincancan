<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<springProperty name="spring.application.name" source="spring.application.name" />
	<include resource="org/springframework/boot/logging/logback/defaults.xml" />
	<property name="LOG_PATTERN"
		value="${spring.application.name} %d{yyyy-MM-dd HH:mm:ss.SSS} ${LOG_LEVEL_PATTERN:-%5p} ${PID:- } : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}" />
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<Pattern>${LOG_PATTERN}</Pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
	</appender>
	<logger name="org.iplatform.microservices" level="INFO"
		additivity="false">
		<appender-ref ref="CONSOLE" />
	</logger>
	<root level="ERROR">
		<appender-ref ref="CONSOLE" />
	</root>
	<jmxConfigurator />
</configuration>